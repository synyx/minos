<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.synyx.minos</groupId>
    <artifactId>org.synyx.minos.application</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>Minos Application Archetype</name>
    <url>http://redmine.synyx.org/wiki/minos/Infrastructure_configuration</url>
    <description>
        You can use this archetyp to create a project template for a Minos application.
        It creates a POM which contains the boilerplate to setup the infrastructure configuration   
    </description>
    
    <distributionManagement>
        <repository>
            <id>nexus.synyx.de</id>
            <url>http://nexus.synyx.de/content/repositories/public-releases</url>
        </repository>
        <snapshotRepository>
            <id>nexus.synyx.de</id>
            <url>http://nexus.synyx.de/content/repositories/public-snapshots</url>
        </snapshotRepository>
    </distributionManagement>
</project>
