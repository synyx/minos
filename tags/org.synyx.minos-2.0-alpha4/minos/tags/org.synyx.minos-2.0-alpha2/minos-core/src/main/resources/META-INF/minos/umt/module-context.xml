<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:minos="http://schemas.synyx.org/minos/core/notification-factory"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
		http://schemas.synyx.org/minos/core/notification-factory http://schemas.synyx.org/minos/core/notification-factory/notification-factory.xsd">

	<import resource="configuration-context.xml" />

	<aop:aspectj-autoproxy/>

    <bean id="userManagement" class="org.synyx.minos.umt.service.UserManagementImpl">
        <constructor-arg ref="userDao" />
        <constructor-arg ref="roleDao" />
        <constructor-arg ref="authenticationService" />
        <constructor-arg>
            <bean class="org.synyx.minos.umt.service.SimplePasswordCreator" />
        </constructor-arg>
    </bean>

    <bean class="org.synyx.minos.umt.service.UmtNotificationAspect">
        <property name="notificationService" ref="notificationService"/>
        <property name="notificationFactory">
            <minos:notification-factory message="User %s has password %s now!"/>
        </property>
    </bean>
    
    <bean id="umt" class="org.synyx.minos.core.module.internal.MinosModule">
        <constructor-arg value="umt" />
        <property name="lifecycle">
            <bean id="coreInstaller" class="org.synyx.minos.core.bootstrap.MinosCoreInstaller">
                <property name="userManagement" ref="userManagement" />
            </bean>
        </property>
        <property name="dependsOn">
            <list>
                <ref bean="core" />
            </list>
        </property>
    </bean>

</beans>
