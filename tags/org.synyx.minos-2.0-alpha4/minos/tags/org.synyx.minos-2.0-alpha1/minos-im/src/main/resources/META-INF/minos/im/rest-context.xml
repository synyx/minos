<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.synyx.minos.im.remoting.rest.InstantMessagingRestController">
		<property name="instantMessaging" ref="instantMessagingService" />
		<property name="dtoAssembler" ref="dtoAssembler" />
	</bean>
	
	
	<bean id="dtoAssembler" class="org.synyx.minos.im.remoting.rest.InstantMessageDtoAssembler" parent="abstractDtoAssembler">
		<property name="instantMessagingService" ref="instantMessagingService" />
	</bean>
	
	
	<bean id="imMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller" parent="abstractJaxbMarshaller">
		<property name="contextPath" value="org.synyx.minos.im.remoting.rest.dto" />
		<!-- 
		<property name="schemas">
			<list>
				<value>classpath:META-INF/minos/core/remoting/rest/core-remoting.xsd</value>
				<value>classpath:META-INF/minos/im/remoting/rest/im-rest.xsd</value>
			</list>
		</property>
		 -->
	</bean>

</beans>
