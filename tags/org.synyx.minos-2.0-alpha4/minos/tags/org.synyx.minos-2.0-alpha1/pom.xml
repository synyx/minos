	<build>
		<plugins>
        
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.3</version>
			</plugin>
			
			<plugin>
				<groupId>com.agilejava.docbkx</groupId>
				<artifactId>docbkx-maven-plugin</artifactId>
				<version>2.0.9</version>
				<dependencies>
					<!-- 
					<dependency>
                        <groupId>offo.hyphenation</groupId>
                        <artifactId>fop-hyph</artifactId>
                        <version>0.1</version>
                        <scope>runtime</scope>
                    </dependency>
                    -->
					<dependency>
						<groupId>org.docbook</groupId>
						<artifactId>docbook-xml</artifactId>
						<version>4.4</version>
						<scope>runtime</scope>
					</dependency>
				</dependencies>
				<inherited>false</inherited>
				<configuration>
					<sourceDirectory>
						${basedir}/src/doc
					</sourceDirectory>
					<targetDirectory>
						${basedir}/target/doc
					</targetDirectory>
					
					<foCustomization>
						src/doc/layout/fo-pdf.xsl
					</foCustomization>

					<fonts>
						<font>
							<name>StellaLining</name>
							<style>normal</style>
							<weight>normal</weight>
							<embedFile>
								${basedir}/src/doc/layout/fonts/SteLiR__.ttf
							</embedFile>
							<metricsFile>
								${basedir}/src/doc/layout/fonts/SteLiR__.xml
							</metricsFile>
						</font>
						<font>
							<name>StellaLining</name>
							<style>italic</style>
							<weight>normal</weight>
							<embedFile>
								${basedir}/src/doc/layout/fonts/SteLiI__.ttf
							</embedFile>
							<metricsFile>
								${basedir}/src/doc/layout/fonts/SteLiI__.xml
							</metricsFile>
						</font>
						<font>
							<name>StellaLining</name>
							<style>normal</style>
							<weight>bold</weight>
							<embedFile>
								${basedir}/src/doc/layout/fonts/SteLiB__.ttf
							</embedFile>
							<metricsFile>
								${basedir}/src/doc/layout/fonts/SteLiB__.xml
							</metricsFile>
						</font>
						<font>
							<name>StellaLining</name>
							<style>italic</style>
							<weight>bold</weight>
							<embedFile>
								${basedir}/src/doc/layout/fonts/SteLiBI_.ttf
							</embedFile>
							<metricsFile>
								${basedir}/src/doc/layout/fonts/SteLiBI_.xml
							</metricsFile>
						</font>
					</fonts>
					 
					<preProcess>
						<copy todir="${basedir}/target/doc/images">
							<!-- Copy layout images -->
							<fileset dir="${basedir}/src/doc/layout/images"/>
							<!-- Copy content images -->
							<fileset dir="${basedir}/src/doc/images">
								<exclude name="**/*.txt"/>
							</fileset>
						</copy>
					</preProcess>					

				</configuration>
			</plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <executions>
                
                    <!-- Package test classes into additional JAR -->
                    <execution>
                        <id>testjar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                    
                </executions>
            </plugin>
			
			<!-- Let WAR projects package their classes in JARs by default -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-beta-1</version>
				<configuration>
					<archiveClasses>true</archiveClasses>
					<attachClasses>true</attachClasses>
					<classesClassifier/>
					<excludes>
					</excludes>
				</configuration>
			</plugin>
			
			<!-- Integrate Jetty as web server for development purposes -->
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>${jetty.version}</version>
				<configuration>
					<contextPath>minos</contextPath>
				</configuration>
			</plugin>
            
            <plugin>
                <groupId>com.google.code.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.4.0</version>
                <inherited>false</inherited>
                <configuration>
                    <header>${basedir}/etc/header.txt</header>
                    <aggregate>true</aggregate>
                    <failIfMissing>false</failIfMissing>
                    
                    <includes>
                        <include>**/src/**</include>
                    </includes>
                    <excludes>
                        <exclude>**/src/doc/**</exclude>
                    </excludes>
                    <properties>
                        <year>${project.inceptionYear}</year>
                    </properties>
                    <encoding>UTF-8</encoding>
                    <mapping>
                        <java>SLASHSTAR_STYLE</java>
                        <tld>XML_STYLE</tld>
                    </mapping>
                </configuration>
            </plugin>
			
		</plugins>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<links>
						<link>http://java.sun.com/j2se/1.5.0/docs/api/</link>
						<link>http://junit.sourceforge.net/javadoc/</link>
						<link>http://static.springframework.org/spring/docs/2.5.x/api/</link>
					</links>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

