<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.synyx.minos.skillz.bootstrap.SkillzInstaller">
		<property name="categoryDao" ref="categoryDao" />
		<property name="skillzDao" ref="skillzDao" />
		<property name="matrixDao" ref="skillzMatrixDao" />
		<property name="userDao" ref="userDao" />
		<property name="roleDao" ref="roleDao" />
		<property name="levelDao" ref="levelDao" />
		<property name="projectDao" ref="projectDao" />
		<property name="activityDao" ref="activityDao"/>
		<property name="resumeDao" ref="resumeDao" />
		<property name="templateDao" ref="matrixTemplateDao" />
        <property name="responsibilityDao" ref="responsibilityDao" />
	</bean>
	
	<bean id="skillManagement" class="org.synyx.minos.skillz.service.SkillManagementImpl">
		<property name="categoryDao" ref="categoryDao" />
		<property name="skillzDao" ref="skillzDao" />
		<property name="matrixDao" ref="skillzMatrixDao" />
		<property name="levelDao" ref="levelDao" />
		<property name="projectDao" ref="projectDao" />
		<property name="resumeDao" ref="resumeDao" />
		<property name="templateDao" ref="matrixTemplateDao" />
	</bean>
	
	<bean id="resumeManagement" class="org.synyx.minos.skillz.service.ResumeManagementImpl" autowire="byName">
	 	<property name="activityDao" ref="activityDao" />
	 	<property name="matrixDao" ref="skillzMatrixDao" />
	 	<property name="resumeDao" ref="resumeDao" />
        <property name="responsibilityDao" ref="responsibilityDao" />
	 	<!-- 
	 	<property name="authenticationService" ref="authenticationService" />
	 	 -->
	</bean>
    
    <bean class="org.synyx.minos.core.message.PrefixAwareMessageSource" parent="abstractMessageSource">
        <property name="prefix" value="skillz" />
        <property name="basename" value="META-INF.minos.skillz.messages" />
    </bean>
    
    <!-- Aspects -->
    <bean class="org.synyx.minos.skillz.service.CreateResumeForUserAspect">
        <constructor-arg ref="resumeManagement" />
        <constructor-arg ref="matrixTemplateDao" />
    </bean>

</beans>
