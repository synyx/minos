<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- UMT rest controller -->
	<bean id="umtRestController" class="org.synyx.minos.umt.remoting.rest.UmtRestController">
		<property name="userManagement" ref="userManagement" />
		<property name="dtoAssembler" ref="umtDtoAssembler" />
	</bean>
	
	<bean id="umtDtoAssembler" class="org.synyx.minos.umt.remoting.rest.UmtDtoAssembler" parent="abstractDtoAssembler" />
	
 	<!-- Use castor to produce XML reponse -->  
	<bean id="marshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller" parent="abstractJaxbMarshaller">
		<property name="contextPath" value="org.synyx.minos.umt.remoting.rest.dto" />
		<property name="schemas">
			<list>
				<value>classpath:META-INF/minos/core/remoting/rest/core-remoting.xsd</value>
				<value>classpath:META-INF/minos/umt/remoting/rest/umt-remoting.xsd</value>
			</list>
		</property>
		<property name="marshallerProperties">
			<map merge="true">
				<entry key="com.sun.xml.bind.namespacePrefixMapper">
					<bean class="org.synyx.minos.support.remoting.MinosNamespacePrefixMapper">
						<property name="unprefixedModuleName" value="umt" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>

</beans>
